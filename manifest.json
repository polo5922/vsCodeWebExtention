{
  "manifest_version": 3,
  "name": "Vs Code github",
  "version": "0.1.0",
  "description": "Extention firefox for adding vscode button in github",
  "icons": {
    "512": "src/public/icons/icon_512.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/public/icons/icon_512.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_title": "Vs_code_github",
    "default_popup": "src/popup.html"
  },
  "background": {
    "scripts": ["src/background.js"],
    "type": "module"
  },
  "permissions": ["scripting", "activeTab", "tabs"],
  "content_scripts": [
    {
      "matches": ["*://github.com/*"],
      "js": ["src/contentScript.js"],
      "run_at": "document_end"
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "paul.barbaux.vs_code_github@firefox",
      "strict_min_version": "42.0"
    }
  }
}
